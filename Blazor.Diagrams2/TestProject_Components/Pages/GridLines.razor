@page "/grid_lines"
<SourceCodeLink Repository="Blazor.Diagrams" Page="@(nameof(GridLines))" />

<Diagram ShowGridLines="true" GridLineDistance="100">
    <Nodes>
        <RectangleNode @bind-X="@X" @bind-Y="@Y">
            This node has its top left corner at position @X,@Y.
        </RectangleNode>
    </Nodes>
    <Links />
</Diagram>
@code {
    private double X { get; set; } = 300;
    private double Y { get; set; } = 300;
}
